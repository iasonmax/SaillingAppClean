@model List<Category>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Sailing Ships
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-lg">Create New Category</i>
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Ship Category
            </th>
            <th>
                Display Order
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>
                    @category.Name
                </td>
                <td>
                    @category.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Upsert" asp-route-id="@category.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                    </div>
                </td>
                <td>
                    <a onClick="Delete('category/delete?id=@category.Id')" class="btn btn-danger mx-2">
                        <i class="bi bi-trash3"></i> Delete
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="~/js/category.js"></script>
}