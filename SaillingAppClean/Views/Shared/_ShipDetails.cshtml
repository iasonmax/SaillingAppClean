@model Ship 
<div class="row">
    <div class="col-12 col-md-5">
        <img src="@Model.ImageUrl" style="border-radius:10px;" width="100%" />
    </div>
    <div class="col-12 col-md-7">
        <div class="row p-2">
            <div class="col-12">
                <p class="card-title text-warning" style="font-size:xx-large">@Model.Name</p>
                <p class="card-text" style="font-size:large">
                    @Model.Description
                </p>
                <p class="h5 text-white">Ship Amenities</p>
                <ul>
                    <li>Amenity 1</li>
                    <li>Amenity 2</li>
                </ul>
            </div>
        </div>
        <div class="row col-12">
            <span class="text-end p-0 pt-3 m-0">
                <span class="">Max Capacity : @Model.Capacity </span><br />
                <span class="">Category : @Model.Category.Name </span><br />
                <span class="text-warning float-end font-weight-bold pt-1" style="font-size:25px;">
                    Daily Rate:
                    <span style="border-bottom:1px solid #ff6a00">
                        @Model.BaseDailyRate.ToString("c")
                    </span>
                </span>
            </span>
        </div>
    </div>
</div>