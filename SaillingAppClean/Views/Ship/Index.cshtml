@model IEnumerable<Ship>

<h1>
  Our Fleet
  <a asp-controller="Ship" asp-action="Upsert" class="btn btn-success float-end" >
    <i class="bi bi-plus-square"></i> Create
  </a>
</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var ship in Model)
    {
        <div class="col">
          <div class="card h-100">
            <div class="card-body">
              <h3 class="card-title">@ship.Name</h3>
              <p class="card-text">@ship.Description</p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <strong>Base Daily Rate:</strong> @ship.BaseDailyRate.ToString("C")
              </li>
              <li class="list-group-item">
                <strong>Capacity:</strong> @ship.Capacity
              </li>
              <li class="list-group-item">
                <strong>Home Port:</strong> @ship.HomePort
              </li>
              <li class="list-group-item">
                <strong>Last Maintenance:</strong>
                        @ship.LastMaintenanceDate.ToShortDateString()
              </li>
            </ul>
            <div class="card-body d-flex justify-content-between">
              <a asp-controller="Ship" asp-action="Upsert" asp-route-id="@ship.Id"
                 class="btn btn-primary flex-grow-1 me-2">
                <i class="bi bi-pencil-square"></i> Edit
              </a>
                    <a onClick=Delete('ship/delete?id=@ship.Id') class="btn btn-danger mx-2">  <i class="bi bi-trash3"></i> Delete </a>
            </div>
          </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/ship.js"></script>
}

