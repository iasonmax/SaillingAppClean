@model List<Ship>


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Sailing Ships
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Ship" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-lg">Create New Ship</i>
            </a>
        </div>
    </div>
</div>
<table id="tblData" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Our Fleet
            </th>
            <th>
                Capacity
            </th>
            <th>
                Home Port
            </th>
            <th>
                Last Maintanance
            </th>
            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
</table>

@section Scripts {
    <script src="~/js/ship.js"></script>
}

